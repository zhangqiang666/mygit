.box{
  width:100%;
  margin:0 auto; 
}
.section{
  width:90%;
  margin:0 auto;
  padding-left:2%;
  height:30px;
  line-height: 34px;
  border-radius: 50px;
  margin-top:10px;
  margin-bottom: 10px;
  background:RGBA(248, 248, 248, 1);
}
.section input{
  width:80%;
  border-radius: 50px;
  height: 100%;
  font-size: 12px;
  float:left;
  margin-left:10px;
}
.section icon{
  float:left;
  margin-left:10px;
  margin-top:5px;
}
.section image{
  width:20px;
  height: 20px;
  margin-top:5px;
}
.swiper {
  height: 400rpx;
  width: 95%;
  border-radius: 5px;
}
.swiper-image {
  height: 100%;
  width: 100%;
  border-radius: 5px;
}
.slide-image{
   height: 100%;
  width: 100%;
  border-radius: 5px;
}
