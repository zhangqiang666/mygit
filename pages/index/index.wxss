/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.index-box{
  width:100%;
  margin:0 auto;
}
.swiper {
  height: 400rpx;
  width: 95%;
  border-radius: 5px;
 
}
.swiper-image {
  height: 100%;
  width: 95%;
  border-radius: 5px;
    margin:0 auto;
}
.slide-image{
   height: 100%;
  width: 100%;
  border-radius: 5px;
}
.box{
  width:100%;
  height:100px;
  
  text-align: center;
}
.img{
  width:100%;
  height:100px;
  border-radius: 5px;
}
.nav-box{
  width:95%;
  height:100px;
  margin-left:2.5%;
  margin-top:20px;
 
}
.nav-left{
  width:48%;
  height:80px;
  float: left;
  /* border:1px solid #DBD8D8; */
  border-radius: 5px;
  
}
.nav-right{
  width:48%;
  height:80px;
  float: right;
  /* border:1px solid #DBD8D8; */
  border-radius: 5px;
   
}
.nav-list-box{
  width:100%;
  height:100px;
  padding-bottom:10px;
  border-bottom: 10px solid #F6F6F9;
}
.nav-list{
  width:25%;
  height:100px;
  text-align: center;
  float:left;
  font-size: 12px;
}
.nav-list image{
  width:64px;
  height:64px;
  border-radius: 50px;
  margin-bottom: 10px;
}
.son-header{
  width:95%;
  height: 40px;
    margin:0 auto;
  line-height: 40px;
  margin-top:20px;
    border-bottom: 1rpx solid #EBEBEB;
}
.son-header text{
  font-size: 16px;
  margin-left:2%;
}
.son-header image{
  width:30px;
  height:30px;
  float:right;
  margin-top:5px;
  margin-right:2%;
 
}
.son-list{
  width:95%;
  margin:0 auto;
  height:100px;
  margin-top:20px;
  padding-bottom: 10px;
  border-bottom: 1rpx solid #EBEBEB;
}
.son-list-left{
  width:60%;
  height:100px;
  float:left;
}
.nav-list-left-content{
  width:100%;
  height:80px;
  line-height: 40px;
  font-size: 16px;
  font-family: "微软雅黑";
  padding:0 5px 0 5px;
}
.nav-list-left-footer{
  width:100%;
  height:20px;
  font-size: 10px;
  color:#ccc;
  padding-left:2%;
}
.son-list image{
  width:35%;
  height:100px;
  border-radius: 5px;
  float:right;
}